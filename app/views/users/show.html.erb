<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />

      <% avatar_url = User.avatar_url(@user, 128) %>
      <% unless avatar_url.nil? %>
        <div class="media-left">

          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<div>
<% if @user.comments.count and @user.posts.count == 0 %>
  <h2><%="#{@user.name} has not submitted any posts yet." %></h2>
  <% else %>

  <h2>Posts</h2>
    <%= render @user.posts %>

  <h2>Comments</h2>
  <%= render @user.comments %>

<% end %>
</div>

<div>
<h2>Favorites</h2>
<%= render @favorite_posts %>

</div>
