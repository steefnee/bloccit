<h1>New Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Advertisements</p>
    <ul>
      <li>No weird stuff.</li>
      <li>Four words minimum.</li>
      <li>There is no rule three.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>

      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad copy" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control', placeholder: "Enter price" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
